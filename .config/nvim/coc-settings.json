{
  "javascript.suggest.names": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.pythonPath": "/opt/homebrew/bin/python",
  "python.venvPath": "/Users/pkmital/anaconda3/envs",
  "python.formatting.provider": "black",
  "python.linting.lintOnSave": true,
  "pyright.inlayHints.functionReturnTypes": true,
  "pyright.inlayHints.variableTypes": false
  "python.formatting.blackPath": "/opt/homebrew/bin/black",
  "inlayHint.enable": false,
  "languageserver":
  {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp", "hpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}

